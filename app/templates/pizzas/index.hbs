
<div class="row">
  {{#each  sortedModel as |pizza|}}
    <div class="col-md-12">
      <div class="panel panel-default library-item">
      
        <div class="panel-heading">
          <h3 class="panel-title">ID: {{pizza.rank}}&nbsp;&nbsp;&nbsp;&nbsp; {{pizza.name}}</h3>
        </div>

        <div class="panel-body">
          <h3 class="panel-title">Cena: {{pizza.price}}</h3>
        </div>

        <div class="panel-body">
          <h3 class="panel-title">Opis: {{pizza.desc}}</h3>
        </div>

        <div class="panel-footer text-right">
          {{#link-to 'pizzas.edit' pizza.id class='btn btn-success btn-xs'}}Edytuj{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' pizza}}>Usu≈Ñ</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

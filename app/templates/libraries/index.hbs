<!-- app/templates/libraries/index.hbs -->
<h2>Menu</h2>
<div class="row">
  {{#each model as |library|}}
    <div class="col-md-12">
      <div class="panel panel-default library-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{library.name}}</h3>
        </div>
        <div class="panel-body">
          <p>mała: {{library.small}} zł, &nbsp;&nbsp;&nbsp; średnia: {{library.medium}} zł, &nbsp;&nbsp;&nbsp; duża: {{library.large}} zł </p>
          <p>opis: {{library.desc}}</p>
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'libraries.edit' library.id class='btn btn-success btn-xs'}}Edytuj{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' library}}>Usuń</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

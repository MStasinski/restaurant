<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Nazwa pizzy</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="wpisz nazwę pizzy"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">mała</label>
    <div class="col-sm-10">
      {{input type="text" value=model.small class="form-control" placeholder="wpisz cenę małej pizzy"}}
  </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">średnia</label>
    <div class="col-sm-10">
      {{input type="text" value=model.medium class="form-control" placeholder="wpisz cenę średniej pizzy"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">duża</label>
    <div class="col-sm-10">
      {{input type="text" value=model.large class="form-control" placeholder="wpisz cenę dużej pizzy"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">opis</label>
    <div class="col-sm-10">
      {{input type="text" value=model.desc class="form-control" placeholder="wpisz cenę średniej pizzy"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default"
        {{action 'saveLibrary' model }}
    >Dodaj do menu</button>
    </div>
  </div>
</div>

<h2>Edytuj</h2>

<div class="form-horizontal">
  
 

  <div class="form-group">
    <label class="col-sm-2 control-label">Tytuł</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="wpisz tytuł posa"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Wiadomość</label>
    <div class="col-sm-10">
      {{input type="text" value=model.news class="form-control" placeholder="wpisz treśc wiadomości"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">opis</label>
    <div class="col-sm-10">
      {{input type="text" value=model.imageUrl class="form-control" placeholder="wpisz opis"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveLibrary' model}}>Zapisz zmiany</button>
    </div>
  </div>
</div>


<div class="row">
  {{#each sortedModel as |zuppa|}}
    <div class="col-md-12">
      <div class="panel panel-default library-item">
        
        <div class="panel-heading">
          <h3 class="panel-title">ID: {{zuppa.rank}}&nbsp;&nbsp;&nbsp;&nbsp; {{zuppa.name}}</h3>
        </div>

        <div class="panel-body">
          <h3 class="panel-title">Cena: {{zuppa.price}}</h3>
        </div>

        
        <div class="panel-body">
          <p>opis: {{zuppa.desc}}</p>
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'zuppas.edit' zuppa.id class='btn btn-success btn-xs'}}Edytuj{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' zuppa}}>Usu≈Ñ</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
